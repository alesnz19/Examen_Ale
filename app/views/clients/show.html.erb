<div class="wrapper wrapper-content animated fadeInRight" style="padding-top: 0px;">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h1>Mostrar Cliente</h1>

          <div align="center">
            <strong>Nombre:</strong>
            <%= @client.Nombre %>
            </p>

            <p>
              <strong>Apellido paterno:</strong>
              <%= @client.Apellido_Paterno %>
            </p>

            <p>
              <strong>Apellido materno:</strong>
              <%= @client.Apellido_Materno %>
            </p>

            <p>
              <strong>Edad:</strong>
              <%= @client.Edad %>
            </p>

            <p>
              <strong>Telefono:</strong>
              <%= @client.Telefono %>
            </p>

            <p>
              <strong>Calle:</strong>
              <%= @client.Calle %>
            </p>

            <p>
              <strong>Colonia:</strong>
              <%= @client.Colonia %>
            </p>

            <p>
              <strong>Numero de casa:</strong>
              <%= @client.Numero_De_Casa %>
            </p>

            <p>
              <strong>Municipio:</strong>
              <%= @client.Municipio %>
            </p>
          </div>
          <div class="row">
            <div id="botones" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= link_to '<span class="fa fa-users" ></span>  '.html_safe + "Editar", edit_client_path(@client), :class => 'btn btn-xs btn-primary btx' %>
              <%= link_to '<span class="fa fa-users" ></span> '.html_safe + "Volver", clients_path, :class => 'btn btn-xs btn-warning btx' %>
            </div>
          </div>

          <%# <%****************************** Body *********************************** %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
    if ($(window).width() <= 425) {
        document.getElementById("botones").style.display = "inline-grid"
        var x = document.getElementsByClassName("btx");
        var i;
        for (i = 0; i < x.length; i++) {
            x[i].classList.remove('btn-xs');
            x[i].classList.add('btn-block');
        }
    }
</script>
